{
  "manifest_version": 2,
  "name": "JavaScript Scraper",
  "version": "1.0",

  "description": "A tool designed to save to disk all JavaScript files downloaded while browsing.",

  "icons": {
    "48": "icons/pulse.svg",
    "96": "icons/pulse.svg"
  },

  "background": {
    "scripts": [
      "scrap-service.js"
    ]
  },

  "permissions": [
    "http://*/*",
    "https://*/*",
    "downloads",
    "webRequest",
    "notifications"
  ]
}